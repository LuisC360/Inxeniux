{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es2016",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "declaration": true,
        "typeRoots": ["./node_modules/@types", "./types"]
    }
}
